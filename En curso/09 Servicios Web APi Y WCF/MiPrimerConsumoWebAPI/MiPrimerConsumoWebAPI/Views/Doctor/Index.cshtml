
@{
    ViewBag.Title="Index";
    Layout=null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">


<h2>Index</h2>

<button onclick="AbrirModal(0)"  type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Nuevo
</button>

<div id="divTabla"></div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lblTitulo"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label>Id Doctor</label>
                    <input name="Id Doctor" class="form-control limpiar" type="text" id="txtIdDoctor" readonly />
                </div>

                <div class="form-group">
                    <label>Nombre</label>
                    <input name="Nombre Doctor" type="text" id="txtNombre" class="form-control limpiar obligatorio" />
                </div>

                <div class="form-group">
                    <label>Apellido Paterno</label>
                    <input name="Apellido Paterno" type="text" id="txtApPaterno" class="form-control limpiar obligatorio" />
                </div>

                <div class="form-group">
                    <label>Apellido Materno</label>
                    <input name="Apellido Materno" type="text" id="txtApMaterno" class="form-control limpiar obligatorio" />
                </div>

                <div class="form-group">
                    <label>Nombre clinica</label>
                    <select name="Clinica" id="cboClinica" class="form-control limpiar obligatorio"></select>
                </div>

                <div class="form-group">
                    <label>Nombre especialidad</label>
                    <select name="Especialidad" id="cboEspecialidad" class="form-control limpiar obligatorio"></select>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" id="txtemail" class="form-control limpiar" />
                </div>

                <div class="form-group">
                    <label>Telefono Celular</label>
                    <input type="text" id="txtTelefonoCelular" class="form-control limpiar" />
                </div>

                <div class="form-group">
                    <label>Sexo</label>
                    <input checked name="sexo" type="radio" id="rbSexoMascu" />
                    <label>Masculino</label>
                    <input name="sexo" type="radio" id="rbSexoFeme" />
                    <label>Femenino</label>
                </div>

                <div class="form-group">
                    <label>Sueldo</label>
                    <input name="Sueldo" type="text" id="txtsueldo" class="form-control limpiar obligatorio" />
                </div>

                <div class="form-group">
                    <label>Fecha Contrato</label>
                    <input name="Fecha Contrato" type="date" id="txtFechaContrato" class="form-control limpiar obligatorio" />
                </div>

                <div class="form-group">
                    <label>Foto</label>
                    <img src="" id="imgFoto" width="300" height="300" />
                    <input type="file" id="fupFoto" class="form-control limpiar" accept="image/" />
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" onclick="Guardar()" class="btn btn-primary">Aceptar</button>
                <button id="btnClose" type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>

            <div id="divError">
            </div>

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js" integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous"></script>
<script src="~/Scripts/Doctor.js"></script>